<Window x:Class="TimeForShutDown.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeForShutDown"
        mc:Ignorable="d"
        Title="TimeForShutDown" Height="418.04" Width="549.432">
    <Grid>
        <TextBox x:Name="tbTimer" HorizontalAlignment="Left" FontSize="35" Height="53" Margin="124,37,0,0" TextWrapping="Wrap" Text="{Binding StartTime,StringFormat='{}{0:hh\\:mm\\:ss}',Mode=TwoWay,UpdateSourceTrigger=LostFocus}" VerticalAlignment="Top" Width="274" />
        <Button Content="Start" HorizontalAlignment="Left" Margin="168,147,0,0" VerticalAlignment="Top" Width="169" Click="Button_Click" Height="21"/>

    </Grid>
</Window>
